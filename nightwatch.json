{
  "src_folders": [
    "./tools/nightwatch/tests"
  ],
  "output_folder": "./.reports/e2e",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  
  "selenium": {
    "start_process": true,
    "server_path": "./tools/nightwatch/lib/selenium-server-standalone.jar",
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./tools/nightwatch/lib/chromedriver"
    }
  },
  
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "127.0.0.1",
      "silent": true,
      "test_runner" : {
        "type" : "mocha",
        "options" : {
          "ui" : "bdd",
          "reporter" : "list"
        }
      },
      "screenshots": {
        "enabled": false,
        "path": true
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "nojs": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": false,
        "acceptSslCerts": true
      }
    }
  }
}